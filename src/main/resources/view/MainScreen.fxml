<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.Separator?>
<AnchorPane stylesheets="@/css/mainScreen.css" xmlns:fx="http://javafx.com/fxml" fx:controller="com.yagodaoud.comandae.controller.ui.MainScreenController">

    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Text fx:id="appTitle" text="ComandaÃª" styleClass="app-title">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Text>

        <TextField fx:id="searchField" promptText="Buscar" styleClass="search-bar">
            <HBox.margin>
                <Insets left="90"/>
            </HBox.margin>
        </TextField>

        <Region HBox.hgrow="ALWAYS"/>

        <ImageView fitHeight="25" fitWidth="25" styleClass="header-icon">
            <Image url="@/icons/notification.png"/>
        </ImageView>
        <ImageView fitHeight="25" fitWidth="25" styleClass="header-icon">
            <Image url="@/icons/settings.png"/>
        </ImageView>
        <StackPane>
            <Circle radius="18" fill="#d65c2f"/>
            <ImageView fitHeight="25" fitWidth="25" styleClass="header-icon">
                <Image url="@/icons/profile.png"/>
            </ImageView>
        </StackPane>
    </HBox>

    <AnchorPane styleClass="sidebar" prefWidth="200" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="0">

        <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="50" style="-fx-padding: 0;">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-button, selected">
                <StackPane>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                            <Image url="@/icons/store.png"/>
                        </ImageView>
                        <Text text="Dashboard" />
                    </HBox>
                </StackPane>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-button" onMouseClicked="#handleMenuButton" >
                <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                    <Image url="@/icons/menu.png"/>
                </ImageView>
                <Text text="Menu" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-button">
                <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                    <Image url="@/icons/orders.png"/>
                </ImageView>
                <Text text="Orders" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-button">
                <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                    <Image url="@/icons/financial.png"/>
                </ImageView>
                <Text text="Financial" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-button">
                <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                    <Image url="@/icons/settings.png"/>
                </ImageView>
                <Text text="Settings" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="10" styleClass="sidebar-button" AnchorPane.bottomAnchor="40" onMouseClicked="#handleSignOutButton">
            <ImageView fitHeight="20" fitWidth="20" styleClass="icon">
                <Image url="@/icons/signout.png"/>
            </ImageView>
            <Text text="Sign Out" />
        </HBox>
    </AnchorPane>

    <VBox AnchorPane.rightAnchor="20" AnchorPane.topAnchor="70" AnchorPane.leftAnchor="220" AnchorPane.bottomAnchor="10">
        <VBox styleClass="analytics-container">
            <!-- Title Section -->
            <VBox spacing="10">
                <padding>
                    <Insets bottom="40"/>
                </padding>
                <Text text="Insights &amp; Analytics" styleClass="section-title"/>
            </VBox>

            <!-- Summary Cards -->
            <HBox spacing="15" styleClass="summary-section">
                <VBox styleClass="summary-box">
                    <Text text="Today's" styleClass="summary-label"/>
                    <Text text="15" styleClass="summary-value"/>
                    <Text text="New items" styleClass="summary-description"/>
                </VBox>

                <VBox styleClass="summary-box">
                    <Text text="Orders" styleClass="summary-label"/>
                    <Text text="7" styleClass="summary-value"/>
                    <Text text="New orders" styleClass="summary-description"/>
                </VBox>

                <VBox styleClass="summary-box">
                    <Text text="2" styleClass="summary-value"/>
                    <Text text="Refunds" styleClass="summary-description"/>
                </VBox>

                <VBox styleClass="summary-box">
                    <Text text="4" styleClass="summary-value"/>
                    <Text text="Messages" styleClass="summary-description"/>
                </VBox>

                <VBox styleClass="summary-box">
                    <Text text="10" styleClass="summary-value"/>
                    <Text text="Messages" styleClass="summary-description"/>
                </VBox>
            </HBox>
        </VBox>


        <!-- Charts Section with spacing -->
        <HBox spacing="10">
            <padding>
                <Insets top="20"/>
            </padding>
            <VBox styleClass="chart-section">
                <Text text="Sales Overview" styleClass="section-sub-title"/>
                <BarChart fx:id="salesChart" styleClass="sales-chart" prefHeight="300" horizontalGridLinesVisible="false" verticalGridLinesVisible="false">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </BarChart>
            </VBox>
            <VBox styleClass="popular-dishes">
                <HBox alignment="CENTER_LEFT">
                    <Text text="Popular Dishes" styleClass="section-sub-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="View All" styleClass="view-all-button"/>
                </HBox>

                <GridPane styleClass="dishes-grid">
                    <!-- Add your dish items here -->
                </GridPane>
            </VBox>
        </HBox>

        <HBox spacing="15">
            <padding>
                <Insets top="20"/>
            </padding>

            <!-- Inventory Status Container -->
            <VBox styleClass="inventory-status">
                <HBox alignment="CENTER_LEFT">
                    <Text text="Inventory Status" styleClass="section-sub-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- List of Inventory Items with Stock Status -->
                <VBox spacing="10">
                    <HBox>
                        <Text text="Low Stock Item 1" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="5" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 2" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="3" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 3" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="8" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 4" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="2" styleClass="inventory-item-quantity"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Location Overview Container -->
            <VBox styleClass="locations-overview">
                <HBox alignment="CENTER_LEFT">
                    <Text text="Locations Overview" styleClass="section-sub-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="View All" styleClass="view-all-button"/>
                </HBox>

                <VBox spacing="10">
                    <HBox>
                        <Text text="Low Stock Item 1" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="5" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 2" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="3" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 3" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="8" styleClass="inventory-item-quantity"/>
                    </HBox>
                    <HBox>
                        <Text text="Low Stock Item 4" styleClass="inventory-item-name"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="2" styleClass="inventory-item-quantity"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
